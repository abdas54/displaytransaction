<mvc:View controllerName="com.eros.displaytransaction.controller.MainView"
    	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" displayBlock="true"
	xmlns="sap.m"
	xmlns:tnt="sap.tnt"
	xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.table"
   >
    <Page id="page" title="{i18n>title}" showHeader="false" class="noPaddingPage page" >
        <content >
        <VBox >
				<Panel width="auto" id="id_FitlerPanel" expandable="true" expanded="true"  class="sapUiTinyMarginBegin sapUiTinyMarginEnd">
					<headerToolbar>
                    <OverflowToolbar>
				<Title text="Filters"/>
				<ToolbarSpacer />
				
			</OverflowToolbar>
						
					</headerToolbar>
					<content>
						<l:Grid defaultSpan="XL2 L2 M3 S12" class="sapUiSizeCompact sapUiSmallMarginTop">
							<VBox >
								<Label text="Transaction Id:" ></Label>
							    <Input id="transId" placeholder="Enter Transaction Id" class= "customInputHeight inputStyle"/>
							</VBox>
							<VBox >
								<Label text="Transaction Date:" ></Label>
							    <DateRangeSelection id="trandate" placeholder="Enter Transaction Date" class= "customInputHeight inputStyle"/>
							</VBox>

							<VBox >
								<Label text="Transaction Type:" ></Label>
							   	<ComboBox id="tranType" placeholder="Select Transaction Type" class= "customInputHeight inputStyle">
				<core:Item key="1" text="Sales" />
                <core:Item key="2" text="Sales Return" />
                <core:Item key="3" text="Advance Payment Receipt" />
                <core:Item key="4" text="Advance Payment Receipt Cancellation" />
                <core:Item key="5" text="Sales Return with Refund" />
			</ComboBox>
							</VBox>
							<VBox >
								<Label text="Store:" ></Label>
							    <Input id="store" placeholder="Enter Store" class="customInputHeight inputStyle"/>
							
							</VBox>

							<VBox >
							<Label text="Customer Name:" ></Label>
							<Input id="custName" placeholder="Enter Customer Name" class="customInputHeight inputStyle"/>

							</VBox>

							<VBox >
								<Label text="Customer Contact:" ></Label>
							<Input id="custNu" placeholder="Enter Customer Phone Number with Country Code" class= "customInputHeight inputStyle"/>
							</VBox>

						

						</l:Grid>
					</content>
				</Panel>
                 <HBox width="100%">
                <VBox alignItems="Stretch" width="100%" class="customScrollContainer" height="650px">
                   
					<VBox class="customScrollContainer sapUiSmallMarginTop" height="650px">
                    
                        <Table  id="transRecords" sticky="ColumnHeaders" items="{TransModel>/TransactionData}" noDataText="No Records Exist"
							 class="customTableHeader tableheader" mode="SingleSelectLeft" itemPress="onProductRowPress">
                            <columns>
                               <Column >
                                    <Text text="Transaction Id"/>
                                </Column>
                                <Column >
                                    <Text text="Transaction Date"/>
                                </Column>
                                <Column >
                                    <Text text="Transaction Type"/>
                                </Column>
                                <Column >
                                    <Text text="Store"/>
                                </Column>
                                <Column >
                                    <Text text="Sale Amount"/>
                                </Column>
                                <Column >
                                    <Text text="Customer Name" />
                                </Column>
                                <Column >
                                    <Text text="Contact Number" />
                                </Column>
                               
                              
                               
                              
                            </columns>
                            <items>
                                <ColumnListItem type="Active">
                                    <cells>
                                        <Text text="{TransModel>TransactionId}"/>
                                        <Text text="{path: 'TransModel>TransactionDate', formatter: '.formatDateShort'}" />
                                        <Text text="{path: 'TransModel>TransactionType', formatter: '.formatTransactionType'}" />
                                        <Text text="{TransModel>Store}"/>
                                        <ObjectNumber number="{TransModel>SaleAmount}" unit="{TransModel>Currency}"/>
                                        <Text text="{TransModel>CustomerName}"/>
                                        <Text text="{TransModel>ContactNo}"/>
                                           
                                       
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
					</VBox>
                   
                </VBox>
                <VBox>
                    <l:VerticalLayout class="sapUiContentPadding equalColumns" width="100%">
                     <GenericTile id="search" frameType="OneByHalf" press="fnSearch" header="SEARCH" class="customTile" headerImage="sap-icon://search">
                            <TileContent>
                                
                            </TileContent>
                        </GenericTile>
                         <GenericTile id="clear" frameType="OneByHalf" press="fnClearSearch" header="CLEAR" class="customTile" headerImage="sap-icon://clear-all">
                            <TileContent>
                                
                            </TileContent>
                        </GenericTile>
                        <GenericTile id="print" frameType="OneByHalf" press="onPrint" header="PRINT" class="customTile" headerImage="sap-icon://print">
                            <TileContent>
                                
                            </TileContent>
                        </GenericTile>



                    
                      
                    </l:VerticalLayout>
                </VBox>
            </HBox>
			
			</VBox>
     </content>
    </Page>
</mvc:View>
