<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
<Dialog title="Item Detail Information" contentHeight="400px" contentWidth="1000px" class="customerDialog">
		<content >
    <VBox class="sapUiSmallMarginTop">
				
				<Table class="customTableHeader tableheader"  items="{itemDataModel>/itemData}">
					<columns>
						<Column><Text text="Material ID"/></Column>
						<Column><Text text="Plant"/></Column>
						<Column><Text text="Quantity"/></Column>
            <Column><Text text="SaleAmount"/></Column>
						<Column><Text text="Discount"/></Column>
						<Column><Text text="Salesman"/></Column>
           <Column visible="{= ${itemDataModel>/TransactionType} === '2' || ${itemDataModel>/TransactionType} === '5' }">
               <Text text="Reason"/>
           </Column>
           <Column visible="{= ${itemDataModel>/TransactionType} === '2' || ${itemDataModel>/TransactionType} === '5' }">
              <Text text="Re Stocking Fee"/>
           </Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<ObjectIdentifier title="{itemDataModel>Material}" text="{itemDataModel>Description}"/>
								<Text text="{itemDataModel>Plant}"/>
								<ObjectNumber number="{itemDataModel>Quantity}" unit="{itemDataModel>Unit}"/>
								<Text text="{itemDataModel>SaleAmount}"/>
                <Text text="{itemDataModel>Discount}" />
								<ObjectIdentifier title="{itemDataModel>SalesmanId}" text="{itemDataModel>SalesmanName}" />
                <Text text="{itemDataModel>Reason}"/>
                <Text text="{itemDataModel>RestockingFee}" />	
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
  </content>
 
		<endButton>
			<Button text="Close" press="onCloseItemDetail" class="cstmBtn"/>
		</endButton>
  </Dialog>
</core:FragmentDefinition>
